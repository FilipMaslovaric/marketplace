<%= form_with(model: shop, local: true, html: { multipart: true }, class: "form-horizontal") do |form| %>

  <% if shop.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(shop.errors.count, "error") %> prohibited this shop from being saved:</h2>

      <ul>
      <% shop.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, class: "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= form.text_field :name, id: :shop_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-2 control-label">Logo</div>
    <%= form.label :logo, 'Upload Logo', class: "btn-bs-file btn btn-xs btn-primary" %>
    <div class="col-lg-10" >
      <%= form.file_field :logo, id: :shop_logo %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-2 control-label">Background Image</div>
    <%= form.label :background_image, 'Upload Background Image', class: "control-label btn-bs-file btn btn-xs btn-primary" %>
    <div class="col-lg-10" >
      <%= form.file_field :background_image, id: :shop_background_image %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :about, class: "col-lg-2 control-label" %>
    <div class="col-lg-10">
    <%= form.text_area :about, id: :shop_about, class: "form-control", rows: 5 %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
      <%= form.submit class: "btn btn-primary" %>
    </div>
  </div>

<% end %>
